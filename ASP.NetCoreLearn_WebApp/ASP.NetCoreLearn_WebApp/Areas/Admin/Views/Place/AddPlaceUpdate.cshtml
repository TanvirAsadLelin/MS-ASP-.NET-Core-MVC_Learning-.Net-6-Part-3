@model ASP.NetCoreLearn.Models.ViewModels.PlaceViewModel

<form method="post" asp-controller="Place" asp-action="AddPlaceUpdate" enctype="multipart/form-data">
    <input type="hidden" asp-for="Place.PlaceId" />
      <div class="border p-3 mt-4">
          <div class="row pb-3">
              <h2 class="text-primary">@((Model.Place == null || Model.Place.PlaceId == 0 )? "Create" : "Update") City</h2>
              <hr />
          </div>
          <div asp-validation-summary=All></div>

            <div class="row mb-3">
            <label asp-for="Place.PlaceName"></label>
            <input asp-for="Place.PlaceName" class="form-control" />
            <span asp-validation-for="Place.PlaceName" class="text-danger"></span>
          </div>

          
            <div class="row mb-3">
            <label asp-for="City.Population"></label>
            <input asp-for="City.Population" class="form-control" />
               <span asp-validation-for="City.Population" class="text-danger"></span>
          </div>

          
            <div class="row mb-3">
            <label asp-for="City.AreaSize"></label>
            <input asp-for="City.AreaSize" class="form-control" />
               <span asp-validation-for="City.AreaSize" class="text-danger"></span>
          </div>

          
            <div class="row mb-3">
            <label asp-for="City.BuildDate"></label>
            <input asp-for="City.BuildDate" class="form-control" />
               <span asp-validation-for="City.BuildDate" class="text-danger"></span>
          </div>

        @if(Model.Place == null || Model.Place.PlaceId == 0 )
        {
            <button class="btn btn-primary" type="submit">Create</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Update</button>
        }
        

      </div>


       <a class="text-end" asp-action="Index" asp-controller="Place"> Back To list</a>
</form>


@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
