@model ASP.NetCoreLearn.Models.ViewModels.CityViewModel

<form method="post" asp-action="AddCityUpdate">
      <div class="border p-3 mt-4">
          <div class="row pb-3">
              <h2 class="text-primary">@((Model.City == null || Model.City.Id == 0 )? "Create" : "Update") City</h2>
              <hr />
          </div>
          <div asp-validation-summary=All></div>

            <div class="row mb-3">
            <label asp-for="City.Name"></label>
            <input asp-for="City.Name" class="form-control" />
            <span asp-validation-for="City.Name" class="text-danger"></span>
          </div>

          
            <div class="row mb-3">
            <label asp-for="City.Population"></label>
            <input asp-for="City.Population" class="form-control" />
               <span asp-validation-for="City.Population" class="text-danger"></span>
          </div>

          
            <div class="row mb-3">
            <label asp-for="City.AreaSize"></label>
            <input asp-for="City.AreaSize" class="form-control" />
               <span asp-validation-for="City.AreaSize" class="text-danger"></span>
          </div>

          
            <div class="row mb-3">
            <label asp-for="City.BuildDate"></label>
            <input asp-for="City.BuildDate" class="form-control" />
               <span asp-validation-for="City.BuildDate" class="text-danger"></span>
          </div>

        @if(Model.City == null || Model.City.Id == 0 )
        {
            <button class="btn btn-primary" type="submit">Create</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Update</button>
        }
        

      </div>


       <a class="text-end" asp-action="Index" asp-controller="City"> Back To list</a>
</form>


@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
