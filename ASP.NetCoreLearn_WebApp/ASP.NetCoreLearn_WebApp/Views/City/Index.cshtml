
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
                 <h1 class="text-primary">All Cities List</h1>
        </div>

        <div class="col-6 text-end">
            <a class=" btn btn-primary" asp-action="AddCity" asp-controller="City"><i class="bi bi-plus-circle"></i>&nbsp; Add New City</a>
        </div>

    </div>

</div>

       
        
                    <table class="table table-borderd table-striped" style="width:100%">


                        <thead>
                            <tr>
                                <th>
                                    City Name
                                </th>

                                 <th>
                                    Population
                                </th>
                                 <th>
                                    Area
                                </th>
                                 <th>
                                    Bild Date
                                </th>

                                <th>
                                    Action
                                </th>
                            </tr>

                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                            
                                     <td>
                                         @item.Population
                                    </td>

                                     <td>
                                         @item.AreaSize
                                    </td>

                                     <td>
                                         @item.BuildDate
                                    </td>

                                    <td role="group">
                                        <a asp-action="EditCity" asp-controller="City" asp-route-id="@item.Id" style="text-decoration: none;"><i class="bi bi-pencil-square"></i> &nbsp; Edit &nbsp;&nbsp;&nbsp;</a>
                                        <a asp-action="DeleteCity" asp-controller="City" asp-route-id="@item.Id" style="text-decoration: none;"><i class="bi bi-x-circle"></i> &nbsp; Delete</a>
                                    
                                    </td>
                                </tr>
                            }
                        </tbody>
              </table>

