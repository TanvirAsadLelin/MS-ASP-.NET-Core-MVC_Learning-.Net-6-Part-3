@model City

<form method="post">
      <div class="border p-3 mt-4">
          <div class="row pb-3">
              <h2 class="text-primary">Add New City</h2>
              <hr />
          </div>
          <div asp-validation-summary=All></div>

            <div class="row mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>

          
            <div class="row mb-3">
            <label asp-for="Population"></label>
            <input asp-for="Population" class="form-control" />
               <span asp-validation-for="Population" class="text-danger"></span>
          </div>

          
            <div class="row mb-3">
            <label asp-for="AreaSize"></label>
            <input asp-for="AreaSize" class="form-control" />
               <span asp-validation-for="AreaSize" class="text-danger"></span>
          </div>

          
            <div class="row mb-3">
            <label asp-for="BuildDate"></label>
            <input asp-for="BuildDate" class="form-control" />
               <span asp-validation-for="BuildDate" class="text-danger"></span>
          </div>


          <button class="btn btn-primary" type="submit">Add</button>

      </div>


       <a class="text-end" asp-action="Index" asp-controller="City"> Back To list</a>
</form>


@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
